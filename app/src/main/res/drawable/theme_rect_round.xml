<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_5dp" />
            <padding
                android:bottom="@dimen/_8dp"
                android:left="@dimen/_2dp"
                android:right="@dimen/_2dp"
                android:top="@dimen/_8dp" />
            <stroke android:width="1dp" android:color="@color/gray_scale" />
            <solid android:color="@color/gray_scale" />
        </shape>
    </item>
    <item android:state_focused="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_5dp" />
            <padding
                android:bottom="@dimen/_8dp"
                android:left="@dimen/_2dp"
                android:right="@dimen/_2dp"
                android:top="@dimen/_8dp" />
            <stroke android:width="1dp" android:color="@color/gray_scale" />
            <solid android:color="@color/gray_scale" />
        </shape>
    </item>
</selector>