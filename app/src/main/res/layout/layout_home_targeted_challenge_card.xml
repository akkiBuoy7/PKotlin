<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_16dp"
        android:layout_marginTop="@dimen/_8dp"
        android:layout_marginEnd="@dimen/_16dp"
        android:layout_marginBottom="@dimen/_8dp"
        app:cardBackgroundColor="@color/blue_darker"
        app:cardCornerRadius="@dimen/_20dp"
        app:layout_constraintTop_toBottomOf="@+id/rv_promo_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="@dimen/_16dp"
            android:paddingTop="@dimen/_16dp"
            android:paddingEnd="@dimen/_12dp"
            android:paddingBottom="@dimen/_16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_action_box" />

                <ImageView
                    android:id="@+id/iv_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="end"
                    android:alpha="0.8"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_forward_arrow"
                    app:tint="@color/white" />
            </RelativeLayout>

            <plm.patientslikeme2.utils.usercontrol.UserTextView
                android:id="@+id/tv_header"
                style="@style/TextView18"
                android:layout_marginHorizontal="@dimen/_36dp"
                android:gravity="center"
                android:maxLines="3"
                android:text="Have you had your\nkidney function checked in \nthe last 12 months?"
                android:textColor="@color/white" />

            <plm.patientslikeme2.utils.usercontrol.UserButton
                android:id="@+id/btn_join_challenge"
                style="@style/ButtonDarkGreenBorder"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30dp"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_12dp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginBottom="@dimen/_4dp"
                android:text="@string/join_the_challenge"
                android:textSize="@dimen/_13sp"
                android:visibility="gone" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>