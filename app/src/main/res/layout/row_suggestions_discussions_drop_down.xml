<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="suggestions"
            type="plm.patientslikeme2.data.model.Discussions" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_28dp"
        android:layout_marginTop="@dimen/_12dp"
        android:layout_marginEnd="@dimen/_28dp"
        android:layout_marginBottom="@dimen/_12dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_10dp"
            android:paddingTop="@dimen/_5dp"
            android:paddingEnd="@dimen/_10dp"
            android:paddingBottom="@dimen/_5dp">

            <plm.patientslikeme2.utils.usercontrol.UserTextView
                android:id="@+id/tv_name"
                style="@style/TextView14"
                android:layout_gravity="center"
                android:gravity="start"
                android:maxLines="1"
                android:minLines="1"
                app:textCapSentences="@{suggestions.title}"
                tools:text="MaureenMoon235" />
        </LinearLayout>

        <View
            android:id="@+id/divider"
            style="@style/DotLineView"
            android:layout_marginStart="@dimen/_28dp"
            android:layout_marginEnd="@dimen/_28dp" />
    </LinearLayout>
</layout>